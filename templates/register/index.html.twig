{% extends 'base.html.twig' %} {% block title %}TechShop - Inscription{% endblock title %} {% block header %}{% endblock header %} {% block content %}
<link rel="stylesheet" href="{{asset('form.css?8')}}">
<div class="formulaire-sty">
    <div class="container">
        <div class="title">Inscription</div>
        <div class="content">
            <div class="user-details">
                {{form_start(form,{'attr': {'autocomplete': 'disabled'} })}} {#
                <div class="error"> {{form_errors(form,{'label':'Error'})}} </div> #}
                <div class="input-box">
                    {{form_label(form.firstname,'Votre Pr√©nom',{'label_attr':{'class':'details'}})}}
                    <div class="form-errors">
                        {{form_errors(form.firstname)}}
                    </div> 
                    {{form_widget(form.firstname,{'attr':{'class':'place'}})}}
                </div>
                <div class="input-box">
                    {{form_label(form.pseudoname,'Votre Pseudoname',{'label_attr':{'class':'details'}})}} 
                    <div class="form-errors">
                        {{form_errors(form.pseudoname)}}
                    </div> 
                    {{form_widget(form.pseudoname,{'attr':{'class':'place'}})}}
                </div>
                <div class="input-box">
                    {{form_label(form.email,"Saisissez un email dont vous avez l'acces !",{'label_attr':{'class':'details'}})}} 
                    <div class="form-errors">
                        {{form_errors(form.email)}}
                    </div> 
                    {{form_widget(form.email,{'attr':{'class':'place'}})}}
                </div>
                <div class="input-box">
                    {{form_label(form.password.pass,'Votre Mot de passe',{'label_attr':{'class':'details'}})}} 
                    <div class="form-errors">
                        {{form_errors(form.password.pass)}}
                    </div> 
                    {{form_widget(form.password.pass,{'attr':{'class':'place'}})}}
                </div>
                <div class="input-box">
                    {{form_label(form.password.confirm,'Confirmez votre Mot de passe',{'label_attr':{'class':'details'}})}} 
                    <div class="form-errors">
                        {{form_errors(form.password.confirm)}}
                    </div>
                     {{form_widget(form.password.confirm,{'attr':{'class':'place'}})}}
                </div>
                <div class="button">
                    {{ form_row(form.submit, { 'label': "S'inscrire",'attr':{'class':'btn' } }) }} {# {{form_rest(form)}} #}
                </div>
                {{form_end(form)}}

                <div class="login__bottom">
                    <p class="login_rows">Si vous avez un compte : <a href="{{path('app_login')}}" class="login_link">Connectez vous</a></p>
                </div>

            </div>
        </div>
    </div>
</div>
</div>

{% endblock content %} {% block footer %}{% endblock footer %}