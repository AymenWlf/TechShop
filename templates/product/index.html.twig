                        </div>
                        <div class="input-box-filter">
                            <div class="form-errors">
                                {{form_errors(form.string)}}
                            </div> 
                            {{form_widget(form.string,{'attr':{'class':'place'}})}}
                        </div>
                        <div class="button">
                            {{ form_row(form.submit, { 'label': "Filtrer",'attr':{'class':'btn' } }) }} {# {{form_rest(form)}} 
                        </div>
                        {{form_end(form)}} #}
                        {# <h1 class="primary__title">Meilleurs Ventes</h1> #}
                    </div>
                    <div class="section_title_resp">
                    {# {{form(form)}} #}
                        {# <span class="dot"></span> #}
                         {{form_start(form2)}}
                        <div class="input-box-filter">
                            <div class="form-errors">
                                {{form_errors(form2.categories)}}
                            </div> 
                            {{form_widget(form2.categories,{'attr':{'class':'categorie_choice'}})}}
                        </div>
                        <div class="input-box-filter">
                            <div class="form-errors">
                                {{form_errors(form2.string)}}
                            </div> 
                            {{form_widget(form2.string,{'attr':{'class':'place'}})}}
