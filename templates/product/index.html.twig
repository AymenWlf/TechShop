{% extends 'base.html.twig' %} {% block title %}TechShop - Nos-Produits{% endblock title %} {% block header %}{% endblock header %} {% block content %}
<style>
    /*
======================
Category Center
======================
*/
    /* .products-container{
    max-width: 167rem;
    margin: 0 auto;
    padding: 0 1.6rem;
    display: grid;
    grid-template-columns: auto;
}
.products-container .section {
    padding: 3rem 0;
    grid-column: 5;
} */
    
    .category_center {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 3rem 2rem;
    }
    
    @media only screen and (max-width: 999px) {
        .category_center {
            grid-template-columns: 1fr 1fr 1fr;
        }
    }
    
    @media only screen and (max-width: 568px) {
        .category_center {
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem 1rem;
        }
        .category__products .product__header {
            height: 10rem;
        }
        .category__products .product__header img {
            object-fit: contain;
        }
    }
    
    #categories label {
        font-size: 1.9rem;
        font-weight: inherit;
        opacity: 0.6;
        padding-left: 0.5rem;
        transition: opacity 0.3s ease-in-out;
        margin: 0 50px 0 0
    }
    
    #categories {}
    
    #categories label:hover {
        opacity: 1;
    }
    
    #categories input {
        opacity: 1;
    }
    
    #categories input:checked+label {
        opacity: 1;
    }
    
    .filter_search {
        font-size: 1.4rem;
        display: inline-block;
        width: 37rem;
        padding: 1.6rem;
        background-color: #fff;
        border: none;
        text-indent: 1rem;
    }
    
    .section_title form div {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }
    
    .section_title {
        width: 100%;
    }
    
    .title__container {
        width: 100%
    }
    
    button.btn {
        /* display: flex;
    justify-content: center; */
        height: 4rem;
        width: 100%;
        margin: 25px 0;
        width: 100%;
        border-radius: 5px;
        border: none;
        color: black;
        font-size: 18px;
        font-weight: 500;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        background-color: #fff;
        padding: 1rem;
        border: 1px solid black;
    }
    
    button.btn:hover {
        /* transform: scale(0.99); */
        background-color: #EB0028;
        color: #fff;
        border: 1px solid #fff;
    }
    
    .section_title_resp {
        display: none;
    }
    
    @media screen and (max-width: 768px) {
        .filter_search {
            width: 17rem;
            padding: 1.6rem 0rem;
        }
    }
    
    @media screen and (max-width: 425px) {
        .place {
            height: 45px;
            width: 100%;
            outline: none;
            font-size: 16px;
            border-radius: 5px;
            padding-left: 15px;
            border: 1px solid #ccc;
            border-bottom-width: 2px;
            transition: all 0.3s ease;
        }
        .categorie_choice {
            margin-bottom: 2rem;
            margin-top: 1rem;
        }
    }
    
    @media screen and (max-width: 425px) {
        .section_title_resp {
            display: block;
        }
        .section_title {
            display: none;
        }
        #categories label {
            margin: 0 8px 0 0;
        }
    }
</style>
<div class="products-container">
    <section class="category__section section" id="category">
        <div class="title__container">
            <div class="section_title">
                {{form(form)}} {# <span class="dot"></span> #} {# {{form_start(form)}}
                <div class="input-box-filter">
                    <div class="form-errors">
                        {{form_errors(form.categories)}}
                    </div>
                    {{form_widget(form.categories,{'attr':{'class':'place'}})}}
                </div>
                <div class="input-box-filter">
                    <div class="form-errors">
                        {{form_errors(form.string)}}
                    </div>
                    {{form_widget(form.string,{'attr':{'class':'place'}})}}
                </div>
                <div class="button">
                    {{ form_row(form.submit, { 'label': "Filtrer",'attr':{'class':'btn' } }) }} {# {{form_rest(form)}}
                </div>
                {{form_end(form)}} #} {#
                <h1 class="primary__title">Meilleurs Ventes</h1> #}
            </div>
            <div class="section_title_resp">
                {# {{form(form)}} #} {# <span class="dot"></span> #} {{form_start(form2)}}
                <div class="input-box-filter">
                    <div class="form-errors">
                        {{form_errors(form2.categories)}}
                    </div>
                    {{form_widget(form2.categories,{'attr':{'class':'categorie_choice'}})}}
                </div>
                <div class="input-box-filter">
                    <div class="form-errors">
                        {{form_errors(form2.string)}}
                    </div>
                    {{form_widget(form2.string,{'attr':{'class':'place'}})}}
                </div>
                <div class="button">
                    {{ form_row(form2.submit, { 'label': "Filtrer",'attr':{'class':'btn' } }) }} {{form_rest(form2)}}
                </div>
                {{form_end(form2)}}
            </div>
        </div>

        <div class="category__container" data-aos="fade-up" data-aos-duration="1200">
            {% if products == null %}
            <h2 style="text-align: center;">Aucun produit ne correspond avec votre recherche !</h2>
            {% endif %}
            <div class="category_center">
                {% for product in products %}
                <div class="product">
                    <div class="product__header">
                        <img src="/uploads/{{product.illustration}}" alt="product">
                    </div>
                    <div class="product__footer">
                        <h3>{{product.name}} </h3>
                        {#
                        <div class="rating">
                            <svg>
                          <use xlink:href="{{asset('images/sprite.svg#icon-star-full')}} "></use>
                        </svg>
                            <svg>
                          <use xlink:href="{{asset('images/sprite.svg#icon-star-full')}} "></use>
                        </svg>
                            <svg>
                          <use xlink:href="{{asset('images/sprite.svg#icon-star-full')}} "></use>
                        </svg>
                            <svg>
                          <use xlink:href="{{asset('images/sprite.svg#icon-star-full')}} "></use>
                        </svg>
                            <svg>
                          <use xlink:href="{{asset('images/sprite.svg#icon-star-empty')}} "></use>
                        </svg>
                        </div> #}
                        <div class="product__price">
                            <h4>{{(product.price / 100)|number_format(2,',','.')}} DH </h4>
                        </div>
                        <a href="{{path('product_show' ,{'slug': product.slug} )}}"><button type="submit" class="product__btn">VOIR LE PRODUIT</button></a>
                    </div>
                    <ul>
                        <li>
                            <a data-tip="Quick View" data-place="left" href="{{path('product_show' ,{'slug': product.slug} )}}">
                                <svg>
                            <use xlink:href="{{asset('images/sprite.svg#icon-eye')}}"></use>
                          </svg>
                            </a>
                        </li>
                        <li>
                            <a data-tip="Add To Wishlist" data-place="left" href="{{path('wish_list_add',{'slug' : product.slug})}}">
                                <svg>
                            <use xlink:href="{{asset('images/sprite.svg#icon-heart-o')}}"></use>
                          </svg>
                            </a>
                        </li>
                    </ul>
                </div>
                {% endfor %}
            </div>
            <ul>
                {% for i in 1..((totalProducts / 8)|round(0, 'ceil')) %}
                    <li><a href="{{path('product',{page: i}) }}">{{i}}</a></li>
                {% endfor %}
            </ul>
        </div>
</div>
</section>
</div>

{% endblock content %} {% block footer %}{% endblock footer %}