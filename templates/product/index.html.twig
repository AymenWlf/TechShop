.category_center {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 3rem 2rem;
}

@media only screen and (max-width: 999px) {
    .category_center {
        grid-template-columns: 1fr 1fr 1fr;
    }
}

@media only screen and (max-width: 568px) {
    .category_center {
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem 1rem;
    }
    .category__products .product__header {
        height: 10rem;
    }
    .category__products .product__header img {
        object-fit: contain;
    }
}

#categories label {
    font-size: 1.9rem;
    font-weight: inherit;
    opacity: 0.6;
    padding-left: 0.5rem;
    transition: opacity 0.3s ease-in-out;
    margin: 0 50px 0 0
}

#categories {

}
#categories label:hover{
    opacity: 1;
} 

#categories input {
    opacity: 1;
}

#categories input:checked + label{
    opacity: 1;
}

.filter_search {
    font-size: 1.4rem;
    display: inline-block;
    width: 37rem;
    padding: 1.6rem;
    background-color: #fff;
    border: none;
    text-indent: 1rem;
}
.section_title form div{
    display:flex;
    justify-content: space-around;
    align-items: center;
}
.section_title{
    width: 100%;
}
.title__container{
    width: 100%
}


button.btn {
    /* display: flex;
    justify-content: center; */
    height: 4rem;
    width: 100%;
    margin: 25px 0;
    width: 100%;
    border-radius: 5px;
    border: none;
    color: black;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: #fff;
    padding: 1rem;
    border: 1px solid black;
}


button.btn:hover {
    /* transform: scale(0.99); */
    background-color: #EB0028;
    color: #fff;
    border: 1px solid #fff;
}

.section_title_resp{
    display: none;
}

@media screen and (max-width: 768px) {
    .filter_search{
        width: 17rem;
        padding: 1.6rem 0rem;
    }
}

@media screen and (max-width: 425px) {
    .place{
        height: 45px;
        width: 100%;
        outline: none;
        font-size: 16px;
        border-radius: 5px;
        padding-left: 15px;
        border: 1px solid #ccc;
        border-bottom-width: 2px;
        transition: all 0.3s ease;
    }
    .categorie_choice{
        margin-bottom: 2rem;
        margin-top: 1rem;
    }
}
@media screen and (max-width: 425px) {
    .section_title_resp{
        display: block;
    }
    .section_title{
        display: none;
    }
    
    #categories label {
        margin: 0 8px 0 0;
    }

}
</style>
<div class="products-container">
    <section class="category__section section" id="category"> 
                 <div class="title__container">
                    <div class="section_title">
                    {{form(form)}}
                        {# <span class="dot"></span> #}
                        {# {{form_start(form)}}
                        <div class="input-box-filter">
                            <div class="form-errors">
                                {{form_errors(form.categories)}}
