{% extends 'base.html.twig' %} {% block title %}TechShop - Recuperation du mot de passe{% endblock title %}{% block content %}
<link rel="stylesheet" href=" {{asset('form.css?4')}} ">
<div class="formulaire-sty">
    <div class="container">
        <div class="title">Mot de passe oublie</div>
        <div class="content">
            <div class="user-details">
                {{form_start(form)}} {#
                <div class="error"> {{form_errors(form,{'label':'Error'})}} </div> #}
                <div class="input-box">
                    {{form_label(form.email,'Adresse email de recuperation : ',{'label_attr':{'class':'details'}})}} {{form_widget(form.email,{'attr':{'class':'place'}})}}
                </div>
                <div class="button">
                    {{ form_row(form.submit, { 'label': "Confirmer",'attr':{'class':'btn' } }) }} {# {{form_rest(form)}} #}
                </div>
                {{form_end(form)}}

            </div>
        </div>
    </div>
</div>
</div>

{% endblock content %} {% block footer %}{% endblock footer %}