    font-size: 18px;
    font-weight: 500;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: #fff;
    padding: 1rem;
    border: 1px solid black;
}
}
@media screen and (max-width:421px) {
    .review-sty h3{
        font-size: 2rem;
    }
    .review-sty .title{
        font-size: 3rem;
    }
}
</style>

<div class="review-sty">
    <div class="container">
        {# <div class="title">Avis</div> #}
        <div class="rating"></div>
        <div class="contenue">
            <div class="review-form">
                <h3>Ajouter un avis :</h3>
                {{form_start(form)}}
                    <div class="input-box">
                        {{form_widget(form.title, {'attr' : {'class' : 'title-widg' , 'placeholder' : 'Titre du commentaire'} }  ) }}
                    </div>
                    <div class="input-box">
                        {{form_widget(form.description, {'attr' : {'class' : 'desc-widg' , 'placeholder' : 'Ecrivez ici votre commentaire...'} }  ) }}
                    </div>
                    <div class="input-box">
                        {{form_row(form.submit, {'label' : 'Ajouter', 'attr' : {'class' : 'submit-widg'} }  ) }}
                    </div>
                {{form_end(form)}}
            </div>
            <div class="reviews">
            
            </div>
