}
.review-sty .review-form{
    height: 100%;
    width: 100%;
}
.review-sty h3{
    font-weight: 500;
    font-size: x-large;
    margin-bottom: 1rem;
    padding-left: 1rem;
    /* font-family: 'Archivo'; */
}
.review-sty .input-box{
    margin: 6px;
}
.review-sty input:focus,
.review-sty input:valid{
    border-color: green;
}
.review-sty .title-widg{
    height: 4rem;
    width: 50%;
    padding: 1rem;
}
.review-sty .desc-widg{
    height: 10rem;
    width: 70%;
    padding: 1rem;
}

.review-sty .input-box div{
    height: 5rem;
}
.review-sty .submit-widg {
    height: 90%;
    /* width: 100%; */
    border-radius: 5px;
    border: none;
    color: black;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: #fff;
    padding: 1rem;
    border: 1px solid black;
}

.review-sty .submit-widg:hover{
    background-color: #EB0028;
    color: #fff;
    border: 1px solid #fff;
}

